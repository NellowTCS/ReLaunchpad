{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "relaunchpad",
  "version": "0.1.0",
  "identifier": "com.nellowtcs.relaunchpad",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "relaunchpad",
        "width": 1000,
        "height": 800,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": false,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "globalShortcut": {}
  }
}
